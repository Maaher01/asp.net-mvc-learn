@model IEnumerable<Day_08_Work_01.Models.Product>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <h2>All Products</h2>
        <div class="d-flex justify-content-end mb-1">
            @Html.ActionLink("+ New Product", "Create", "Products", new { }, new { @class = "btn btn-primary btn-md" })
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Product Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.ProductName</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Products", new { id = p.ProductId }, new { @class = "btn btn-success btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

