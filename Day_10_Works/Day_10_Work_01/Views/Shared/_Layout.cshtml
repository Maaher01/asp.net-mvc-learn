<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <style>
        body{
            padding-top: 70px;
        }
    </style>
    @RenderSection("styles", false)
</head>
<body>
    <div class="navbar navbar-light bg-light navbar-expand-md fixed-top shadow-sm">
        <div class="container-fluid">
            <div class="navbar-header">

                @Html.ActionLink("Worker Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav  ms-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Workers", "Index", "Workers", new { }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        @RenderBody()


    </div>
    <footer class="container-fluid">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    @RenderSection("scripts", false)
</body>
</html>